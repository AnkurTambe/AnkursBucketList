<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/pastel_wallpaper">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:id="@+id/title_bucket_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Bucket List"
            android:textColor="#EC670E"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_bucket_list"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:fontFamily="casual"
            android:text="ankurtambe3006@gmail.com"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_places"
            android:layout_width="200dp"
            android:layout_height="275dp"
            android:layout_below="@id/email_address"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:elevation="100dp"
            app:cardCornerRadius="12dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/places" />

            <TextView
                android:id="@+id/starters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="8dp"
                android:fontFamily="casual"
                android:text="Places To Go"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_things"
            android:layout_width="200dp"
            android:layout_height="275dp"
            android:layout_below="@id/card_places"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:elevation="100dp"
            app:cardCornerRadius="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/things" />

                <TextView
                    android:id="@+id/mains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="8dp"
                    android:fontFamily="casual"
                    android:text="Things To Do"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>
